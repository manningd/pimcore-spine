<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
		<plugin>

            <!-- the plugin name [A-Za-z_] -->
            <pluginName>Spine</pluginName>

            <!-- a short description -->
			<pluginDescription>Spine is an plugin of the Premier Open-Source Multichannel Platform Pimcore,
                which is an attempt to develop the missing pieces for pimcore to easier the development
                with DRY concept.
            </pluginDescription>
            <pluginNiceName>Spine</pluginNiceName>

            <!-- meta data -->
            <pluginVersion>2.0.1</pluginVersion>
            <pluginRevision>2</pluginRevision>
            <pluginBuildTimestamp>0</pluginBuildTimestamp>

            <!-- put in the URL for the plugin configuration eg. /plugin/Spine/admin/index -->
            <pluginIframeSrc></pluginIframeSrc>

            <!-- className of the plugin which extends Pimcore_API_Plugin_Abstract-->
			<pluginClassName>Spine_Plugin</pluginClassName>

            <!-- include paths relative to plugin-directory -->
			<pluginIncludePaths>
				<path>/Spine/lib</path>
                <path>/Spine/models</path>
			</pluginIncludePaths>

			<!-- namespaces to register with autoloader-->
			<pluginNamespaces>
				<namespace>Spine</namespace>
			</pluginNamespaces>

			<!-- js files with path relative to plugin-directory -->
			<pluginJsPaths>
                <path>/plugins/Spine/static/js/startup.js</path>
			</pluginJsPaths>

			<!-- css files with path relative to plugin-directory -->
			<pluginCssPaths>
                <path>/plugins/Spine/static/css/main.css</path>
			</pluginCssPaths>
		</plugin>
</zend-config>
